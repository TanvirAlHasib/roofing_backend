{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "blocks"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "date": {
      "type": "date"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "short_des": {
      "type": "text"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Free Inspection",
        "Commercial Roofing",
        "Solar Panels",
        "Roof Replacement",
        "Roof Renovation",
        "Damage Repairs"
      ]
    },
    "tags": {
      "type": "customField",
      "customField": "plugin::tagsinput.tags"
    }
  }
}
